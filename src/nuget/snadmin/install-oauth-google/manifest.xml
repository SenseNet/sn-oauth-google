<Package type='Install'>
  <Id>SenseNet.OAuth.Google</Id>
  <Description>sensenet ECM Google OAuth Provider 7.0 (beta)</Description>
  <ReleaseDate>2017-11-26</ReleaseDate>
  <Version>7.0.0</Version>
  <Dependencies>
    <Dependency id='SenseNet.Services' minVersion='7.0.0' />
  </Dependencies>
  <Steps>
    <Phase>
      <StartRepository startWorkflowEngine="false" />

      <IfFieldExists contentType="User" field="GoogleUserId">
        <Then>
          <Trace>User content type already has a field named GoogleUserId.</Trace>
        </Then>
        <Else>
          <AddField contentType="User">
            <FieldXml>
              <Field name="GoogleUserId" type="ShortText" />
            </FieldXml>
          </AddField>
        </Else>
      </IfFieldExists>
      
    </Phase>
  </Steps>
</Package>